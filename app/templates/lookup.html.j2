{% extends 'base.html.j2'%}
{% block title %}
Pokemon Lookup
{% endblock %}
{% block css %}
<link rel="stylesheet" href="{{url_for('static',filename='css/login.css')}}">
{% endblock %}

{% block content %}
<br>
<h1 style = "text-align: center"> Pokemon Lookup </h1>

<hr>
<br>
<br>

<form action = "{{url_for('main.lookup')}}" method = "POST">
    {{form.hidden_tag()}}
    <div>
    {{form.pokemon.label(class = "form-label")}}
    {{form.pokemon(class = "form-control", style = "text-align: center")}}
    {% for error in form.pokemon.errors %}
    <small style = "color:red;"> {{error}} </small>
    {% endfor %}
    </div>
    <br>
    <div>
    {{form.submit(class = "btn btn-primary form-control")}}
    </div>
</form>

<br>
<hr>
<br>

{% for pokemon in pokemons %}
    {% include './includes/card.html.j2' %}
{% endfor %}


{% endblock %}