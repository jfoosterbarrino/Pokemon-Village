{% extends 'base.html.j2'%}
{% block title %}
Pokemon Lookup
{% endblock %}

{% block content %}
<br>
<h1> Pokemon Lookup </h1>

<hr>
<br>
<br>

<form action = "{{url_for('lookup')}}" method = "POST">
  <div class="mb-3">
    <label for="pokemon_name" class="form-label"><strong>Pokemon Name</strong></label>
    <input type="text" name = "pokemon" class="form-control" id="pokemon_name">
    <div id="reminder" class="form-text">Choose from ALL pokemon. (lower-case)</div>
  </div>
  <button type="submit" class="btn btn-warning">I Choose You!</button>
</form>

<br>
<hr>
<br>

{% if pokemons %}

  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Ability</th>
        <th scope="col">Base XP</th>
        <th scope="col">Sprite</th>
        <th scope="col">Base Attack</th>
        <th scope="col">Base HP</th>
        <th scope="col">Base Defense</th>
      </tr>
    </thead>
    <tbody>
    {% for info in pokemons %}
      <tr>
        <th scope="row">{{info.name}}</th>
        <td>{{info.ability}}</td>
        <td>{{info.base_experience}}</td>
        <td>{{info.sprite}}</td>
        <td>{{info.base_attack}}</td>
        <td>{{info.base_hp}}</td>
        <td>{{info.base_defense}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endif %}


{% endblock %}