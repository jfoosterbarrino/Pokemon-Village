{% extends 'base.html.j2'%}
{% block title %}
Pokemon Lookup
{% endblock %}

{% block content %}
<br>
<h1> Pokemon Lookup </h1>

<hr>
<br>
<br>

<form action = "{{url_for('lookup')}}" method = "POST">
    {{form.hidden_tag()}}
    <div>
    {{form.pokemon.label(class = "form-label")}}
    {{form.pokemon(class = "form-control")}}
    {% for error in form.pokemon.errors %}
    <small style = "color:red;"> {{error}} </small>
    {% endfor %}
    </div>
    <br>
    <div>
    {{form.submit(class = "btn btn-primary form-control")}}
    </div>
</form>

<br>
<hr>
<br>

{% if pokemons %}

  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Ability</th>
        <th scope="col">Base XP</th>
        <th scope="col">Sprite</th>
        <th scope="col">Base Attack</th>
        <th scope="col">Base HP</th>
        <th scope="col">Base Defense</th>
      </tr>
    </thead>
    <tbody>
    {% for info in pokemons %}
      <tr>
        <th scope="row">{{info.name}}</th>
        <td>{{info.ability}}</td>
        <td>{{info.base_experience}}</td>
        <td>{{info.sprite}}</td>
        <td>{{info.base_attack}}</td>
        <td>{{info.base_hp}}</td>
        <td>{{info.base_defense}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endif %}


{% endblock %}